@model Producto

<div class="row g-3">
  <div class="card">
    <div class="col-md-4 text-center bg-white pt-3">
      <img src="@((Model.ArchivoId == null) ? "https://placehold.co/300x450/FFF/999?text=ArtÃ­culo" : $"{ViewBag.Url}/api/archivos/{Model.ArchivoId}")"
           alt="@Model.Titulo" class="portada img-fluid" data-url="@ViewBag.Url"
           style="max-height: 300px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <div class="mb-3 ps-3">
          <label asp-for="ProductoId" class="form-label">ProductoId</label>
          <div class="form-text">@Model.ProductoId</div>
        </div>
        <div class="mb-3 ps-3">
          <label asp-for="Titulo" class="form-label">Titulo</label>
          <div class="form-text">@Model.Titulo</div>
        </div>
        <div class="mb-3 ps-3">
          <label asp-for="Precio" class="form-label">Precio</label>
          <div class="form-text">@Model.Precio</div>
        </div>
        <div class="mb-3 ps-3">
          <label asp-for="ArchivoId" class="form-label">ArchivoId</label>
          <div class="form-text">@((Model.ArchivoId == null) ? "N/A" : $"Id: {Model.ArchivoId}")</div>
        </div>
        <div class="mb-3 ps-3">
          <label asp-for="Descripcion" class="form-label">Descripcion</label>
          <div class="form-text">@Model.Descripcion</div>
        </div>
      </div>
    </div>
  </div>
</div>